{
  "name": "trivia",
  "version": "1.0.0",
  "description": "Trivia competition website",
  "main": "dist/src/index.js",
  "scripts": {
    "build:back": "tsc && node dist/src/index.js",
    "back": "npx nodemon",
    "front": "cd frontend && ng serve",
    "start": "npx concurrently -p \"[{name}]\" -n \"FRONT,BACK\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run front\" \"npm run back\""
  },
  "keywords": [
    "trivia"
  ],
  "author": "L. S. Clark",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/express": "^4.17.12",
    "@types/glob": "^7.1.3",
    "@types/ws": "^7.4.5",
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "express": "^4.17.1",
    "fuzzball": "^1.4.0",
    "glob": "^7.1.7",
    "rxjs": "^7.1.0",
    "ws": "^7.5.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "exec": "npm run build:back",
    "delay": 2500
  }
}
